<div class="container announcements">
  <% @announcements.each do |announcement| %>
      <div class="row announcement">
        <div class="col-lg-4">
          <div class="announcement-image">
            <%= image_tag(announcement.main_image.url(:big)) %>
          </div>
        </div>
        <div class="col-lg-8">
          <h2 class="announcement-title"><%= link_to announcement.title, announcement %></h2>
          <div class="announcement-body"><%= truncate(announcement.body.html_safe, length: 400, escape: false) %></div>
          <span class="announcement-author">
            <i class="fa fa-user" aria-hidden="true">&nbsp;&nbsp;</i><%= announcement.admin_user.name %>
          </span>
          <span class="announcement-category">
            <i class="fa fa-tags" aria-hidden="true"></i>&nbsp;<%= link_to announcement.category.name, announcement.category %>
          </span>
          <span class="announcement-date">
            <i class="fa fa-clock-o" aria-hidden="true"></i>&nbsp;&nbsp;<%= l announcement.created_at, format: :short %>
        </span>
        </div>
      </div>
  <% end %>
  <%= will_paginate @announcements %>
</div>