<div class="col-lg-7">
  <div class="gallery">
    <div class="col-lg-12">
      <h1 class="section-header"><span><%= @gallery.title %></span></h1>
    </div>
    <div class="row fancybox-outer">
      <% @gallery.photo.each do |gallery| %>
          <div class="col-lg-4">
            <a href="<%= gallery %>" rel="gallery<%= @gallery.id %>" class="fancybox gallery-image">
              <%= image_tag gallery.url(:medium) %>
            </a>
          </div>
      <% end %>
    </div>
  </div>
</div>
<div class="col-lg-3">
  <%= render partial: 'shared/right_bar/publications',  title: 'Публікації' %>
  <%= render partial: 'shared/right_bar/banner' %>
  <%= render partial: 'shared/right_bar/facebook' %>
</div>